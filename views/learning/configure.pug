extends ../layout.pug

block append scripts
    script(src="/web/scripts/pages/configure.js")

block content

    div(class="container")
        div(class="row mt-4")

            div(class="col-lg-6 offset-lg-3 float-lg-left")
                section(id="maze-container" class="maze-container")
                    img(class="mw-100 mh-100" src= file.url)

                section(id="configuration" class="configuration mt-4")
                    form(method="POST" action="/learn/solve/" + file.name)
                        div(class="form-row")
                            div(class="form-group col-md-4")
                                label(for="learning-rate") Learning Rate
                                input(type="number" id="learning-rate" name="learning-rate" class="form-control" step="0.01" max="1" min="0.01" placeholder="Learning Rate" value="0.01")

                            div(class="form-group col-md-4")
                                label(for="vehicles") Vehicles
                                input(type="number" id="vehicles" name="vehicles" class="form-control" step="5" max="250" min="10" placeholder="Vehicles" value="50")

                        div(class="form-row")
                            div(class="form-group col-md-12")
                                div(class="custom-control custom-checkbox")
                                    input(type="checkbox" class="custom-control-input" id="show-leader" name="show-leader")
                                    label(class="custom-control-label pt-1" for="show-leader" value="configuration.showLeader") Show the Leader

                        div(class="form-row")
                            div(class="btn-group" role="group" aria-label="Basic example")
                                button(type="button" class="btn btn-primary") Start Training
