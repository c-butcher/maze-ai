extends ../layout.pug

block append scripts
    script(type="text/javascript" src='/web/p5/p5.min.js')
    script(type="text/javascript" src='/web/scripts/tile.js')
    script(type="text/javascript" src='/web/scripts/maze.js')
    script(type="text/javascript" src='/web/scripts/controller.js')
    script(type="text/javascript" src='/web/scripts/pages/generator.js')

block page-menu
    ul(class="nav justify-content-end")
        li(class="nav-item dropdown show")
            a(class="nav-link dropdown-toggle open" href="#" id="page-settings" aria-haspopup="true" aria-expanded="false") Settings
            div(class="dropdown-menu dropdown-menu-right page-settings-dropdown show" aria-labelledby="page-settings")
                div(class="input-group mb-2 mr-sm-2")
                    div(class="input-group-prepend")
                        div(class="input-group-text") Width
                    input(type="number" class="form-control" id="maze-width" name="maze-width" placeholder="Width")
                    div(class="input-group-append")
                        div(class="input-group-text") px


                div(class="input-group mb-2 mr-sm-2")
                    div(class="input-group-prepend")
                        div(class="input-group-text") Height
                    input(type="number" class="form-control" id="maze-height" name="maze-height" placeholder="Height")
                    div(class="input-group-append")
                        div(class="input-group-text") px


                div(class="input-group mb-2 mr-sm-2")
                    div(class="input-group-prepend")
                        div(class="input-group-text") Cell Size
                    input(type="number" class="form-control" id="maze-cell-size" name="maze-cell-size" placeholder="Cell Size")
                    div(class="input-group-append")
                        div(class="input-group-text") px


                div(class="input-group mb-2 mr-sm-2")
                    div(class="input-group-prepend")
                        div(class="input-group-text") Frames
                    input(type="number" class="form-control" id="maze-frame-rate" name="maze-frame-rate" placeholder="Frame Rate")
                    div(class="input-group-append")
                        div(class="input-group-text") / sec

                div(class="custom-control custom-checkbox my-2")
                    input(type="checkbox" class="custom-control-input" id="maze-breadcrumbs")
                    label(class="custom-control-label" for="maze-breadcrumbs" style="display: block") Show Breadcrumbs

                div(class="btn-group w-100")
                    button(id="maze-restart" class="btn btn-primary col-lg-12" type="button") Generate

block content
        div(class="row")
            div(class="col-lg-12")
                section(id="maze-generator" class="text-center my-4")
